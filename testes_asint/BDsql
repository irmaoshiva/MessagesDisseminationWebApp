drop table if exists building;
drop table if exists messages;
drop table if exists users;


create table building(
  id integer,
  name varchar(255),
  lat integer,
  long integer,
  primary key(id)
);

create table messages(
  id integer,
  message varchar(255), 
  building_id integer,
  creation date, 
  primary key(id),
  foreign key(building_id) references building(id)
);

create table users(
  name varchar(255),
  istid varchar(255),
  primary key(istid)
);

